<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.iremember.subscriber.iremembersubscriber.MainActivity">

    <TextView
        android:id="@+id/tv_main_label"
        android:layout_width="@dimen/tv_content_width"
        android:layout_height="wrap_content"
        android:text="@string/tv_main_label"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large">

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:onClick="onSettingsClick"
            android:padding="@dimen/btn_padding_large"
            android:text="@string/btn_settings"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/btn_textsize_large"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:onClick="onDisconnectClick"
            android:padding="@dimen/btn_padding_large"
            android:text="@string/btn_disconnect"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/btn_textsize_large"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_restriction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_restriction_label"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_medium"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_restriction_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_restriction_music"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_medium"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_wrong_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_wrong_wifi"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_medium"
        android:visibility="gone" />

</LinearLayout>
