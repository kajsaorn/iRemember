<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.iremember.subscriber.iremembersubscriber.MainActivity">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/tv_status_width"
        android:layout_height="wrap_content"
        android:text="@string/status_connected"
        android:textAlignment="center"
        android:textSize="@dimen/textsize_large"
        android:textStyle="bold"
        android:layout_margin="@dimen/tv_status_margin"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:onClick="onSettingsClick"
            android:padding="@dimen/btn_padding_large"
            android:text="@string/btn_settings"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/btn_textsize_large"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:onClick="onDisconnectClick"
            android:padding="@dimen/btn_padding_large"
            android:text="@string/btn_disconnect"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/btn_textsize_large"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
