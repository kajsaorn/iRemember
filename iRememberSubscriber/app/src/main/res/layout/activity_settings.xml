<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/settings_bg"
    tools:context="com.iremember.subscriber.iremembersubscriber.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border_size_half">

        <Button
            android:id="@+id/btn_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onInfoClick"
            android:paddingTop="@dimen/btn_padding_medium"
            android:paddingBottom="@dimen/btn_padding_medium"
            android:text="@string/settings_info_tab"
            android:textSize="@dimen/btn_textsize_medium"
            android:background="@drawable/tab_unselected" />


        <Button
            android:id="@+id/btn_bg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBgColorClick"
            android:paddingTop="@dimen/btn_padding_medium"
            android:paddingBottom="@dimen/btn_padding_medium"
            android:text="@string/settings_background_tab"
            android:textSize="@dimen/btn_textsize_medium"
            android:background="@drawable/tab_unselected"  />


        <Button
            android:id="@+id/btn_txt_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onTextColorClick"
            android:paddingTop="@dimen/btn_padding_medium"
            android:paddingBottom="@dimen/btn_padding_medium"
            android:text="@string/settings_text_tab"
            android:textSize="@dimen/btn_textsize_medium"
            android:background="@drawable/tab_unselected"  />


        <Button
            android:id="@+id/btn_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onMusicClick"
            android:paddingTop="@dimen/btn_padding_medium"
            android:paddingBottom="@dimen/btn_padding_medium"
            android:text="@string/settings_music_tab"
            android:textSize="@dimen/btn_textsize_medium"
            android:background="@drawable/tab_unselected" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
