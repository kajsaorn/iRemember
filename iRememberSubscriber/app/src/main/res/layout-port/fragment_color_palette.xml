            <TextView android:background="@color/c39" android:layout_height="match_parent"/>
            <TextView android:background="@color/c40" android:layout_height="match_parent"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <TextView android:background="@color/c41" android:layout_height="match_parent"/>
